<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini-Whatsapp</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h2>All Chats</h2>

    <!-- New Chat Button -->
    <form methode="GET" action="/chats/new">
        <button>New Chats</button>
    </form>

    <!-- Chat Container -->
    <div class="chat-container">
        <% for (let chat of chats) { %>
            <div class="chat">
                <!-- Sender Information -->
                <p>From: <i><%= chat.from %></i></p>
                
                <!-- Message Content -->
                <div class="msg">
                    <p><%= chat.msg %></p>
                </div>

                <!-- Buttons for Edit and Delete -->
                <form method="GET" action="/chats/<%= chat._id %>/edit">
                    <button>Edit</button>
                </form>
                <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                    <button>Delete</button>
                </form>

                <!-- Receiver Information -->
                <p>Received by: <i><%= chat.to %></i></p>

                <!-- Timestamp -->
                <p class="chat-timestamp">
                    <%= chat.created_at.toString().split(" ")[4] %> <br>
                    <%= chat.created_at.toString().split(" ").slice(0, 4).join("-") %>
                </p>
            </div>
        <% } %>
    </div>
</body>
</html>
